<Window x:Class="my_wpf_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator"
        Height="350"
        Width="215">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Name="InputBox"
                 Grid.Row="0"
                 Grid.Column="0"
                 Grid.ColumnSpan="4"
                 Margin="10"
                 FontSize="24"
                 HorizontalAlignment="Right"/>

        <Button Content="AC"
                Grid.Row="1"
                Grid.Column="0"
                Tag="ClearAll"
                Click="Operator_click"/>
        <Button Content="C"
                Grid.Row="1"
                Grid.Column="1"
                Tag="Clear"
                Click="Operator_click"/>
        <Button Content="%"
                Grid.Row="1"
                Grid.Column="2"
                Tag="Percent"
                Click="Operator_click"/>
        <Button Content="&#247;"
                Grid.Row="1"
                Grid.Column="3"
                Tag="Divide"
                Click="Operator_click"/>
        <Button Content="7"
                Grid.Row="2"
                Grid.Column="0"
                Tag="7"
                Click="Number_click"/>
        <Button Content="8"
                Grid.Row="2"
                Grid.Column="1"
                Tag="8"
                Click="Number_click"/>
        <Button Content="9"
                Grid.Row="2"
                Grid.Column="2"
                Tag="9"
                Click="Number_click"/>
        <Button Content="&#215;"
                Grid.Row="2"
                Grid.Column="3"
                Tag="Multiply"
                Click="Operator_click"/>
        <Button Content="4"
                Grid.Row="3"
                Grid.Column="0"
                Tag="4"
                Click="Number_click"/>
        <Button Content="5"
                Grid.Row="3"
                Grid.Column="1"
                Tag="5"
                Click="Number_click"/>
        <Button Content="6"
                Grid.Row="3"
                Grid.Column="2"
                Tag="6"
                Click="Number_click"/>
        <Button Content="&#8722;"
                Grid.Row="3"
                Grid.Column="3"
                Tag="Subtract"
                Click="Operator_click"/>
        <Button Content="1"
                Grid.Row="4"
                Grid.Column="0"
                Tag="1"
                Click="Number_click"/>
        <Button Content="2"
                Grid.Row="4"
                Grid.Column="1"
                Tag="2"
                Click="Number_click"/>
        <Button Content="3"
                Grid.Row="4"
                Grid.Column="2"
                Tag="3"
                Click="Number_click"/>
        <Button Content="&#43;"
                Grid.Row="4"
                Grid.Column="3"
                Tag="Add"
                Click="Operator_click"/>
        <Button Content="0"
                Grid.Row="5"
                Grid.Column="0"
                Tag="0"
                Click="Number_click"/>
        <Button Content="."
                Grid.Row="5"
                Grid.Column="1"
                Tag="Decimal"
                Click="Operator_click"/>
        <Button Content="Del"
                Grid.Row="5"
                Grid.Column="2"
                Tag="Delete"
                Click="Operator_click"/>
        <Button Content="&#61;"
                Grid.Row="5"
                Grid.Column="3"
                Tag="Equals"
                Click="Operator_click"/>   

    </Grid>
</Window>